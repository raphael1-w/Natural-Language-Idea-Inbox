<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|top"
    android:orientation="vertical"
    android:background="@color/md_theme_background"
    tools:context=".ui.detail.DetailFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:title=""
            app:menu="@menu/detail_top_bar_menu"
            app:navigationIcon="@drawable/ic_arrow_back" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/custom_background_less_rounded"
            android:paddingHorizontal="16dp"
            android:paddingVertical="5dp"
            android:layout_margin="8dp">

            <!-- Editable Text Area (Non-elevated, mimicking iPod screen) -->
            <EditText
                android:id="@+id/editableTextArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="1dp"
                android:textSize="18sp"
                android:gravity="top"
                android:inputType="textMultiLine|text"
                android:minLines="10"
                android:importantForAutofill="no"
                android:overScrollMode="ifContentScrolls"
                android:labelFor="@+id/editableTextArea"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center_horizontal">

            <!-- Segmented Control for changing which text to view -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/segmentedButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_transcript"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transcript" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_userText"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_summary"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summary" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- Audio Controls UI -->
            <LinearLayout
                android:id="@+id/audioControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_gravity="bottom">

                <!-- Slider for Audio Progress -->
                <com.google.android.material.slider.Slider
                    android:id="@+id/audioProgressSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:id="@+id/audioButtons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal">

                    <!-- Rewind Button -->
                    <Button
                        style="?attr/materialIconButtonFilledTonalStyle"
                        android:id="@+id/btn_rewind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        app:icon="@drawable/ic_replay_5"
                        app:iconSize="24dp"
                        android:padding="20dp"
                        android:contentDescription="Rewind"/>

                    <!-- Play/Pause Button -->
                    <Button
                        style="?attr/materialIconButtonFilledStyle"
                        android:id="@+id/btn_play_pause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        app:icon="@drawable/ic_play"
                        app:iconSize="24dp"
                        android:padding="30dp"
                        android:contentDescription="Play/Pause"/>

                    <!-- Forward Button -->
                    <Button
                        style="?attr/materialIconButtonFilledTonalStyle"
                        android:id="@+id/btn_forward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        app:icon="@drawable/ic_forward_5"
                        app:iconSize="24dp"
                        android:padding="20dp"
                        android:contentDescription="Forward"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
